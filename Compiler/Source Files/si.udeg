programa TeTruena
	entero x;
	constante entero MAX := 5;
		principal
		inicio
			despliega("Ingresa el valor de x: " + "\n");
			lee(x);
			si(x > MAX)
				despliega("x: " + x +  " es mayor que " + MAX + "\n");
			fin de si;
			despliega("Fuera de si." + "\n");
		fin de principal;
	fin de TeTruena.